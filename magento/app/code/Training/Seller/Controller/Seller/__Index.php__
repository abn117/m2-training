<?php

namespace Training\Seller\Controller\Seller;

use Magento\Framework\Api\SearchCriteriaInterface;
use Magento\Framework\App\Action\Action;
use Magento\Framework\App\Action\Context;
use Magento\Framework\App\Action\HttpGetActionInterface;
use Magento\Framework\Controller\Result\Raw as RawResult;
use Magento\Framework\Controller\ResultFactory;
use Training\Seller\Api\SellerRepositoryInterface;
use Training\Seller\Model\Data\Seller;

class Index extends Action implements HttpGetActionInterface
{
    private SellerRepositoryInterface $sellerRepository;
    private SearchCriteriaInterface $criteria;

    public function __construct(Context $context, SellerRepositoryInterface $sellerRepository, SearchCriteriaInterface $criteria)
    {
        parent::__construct($context);
        $this->sellerRepository = $sellerRepository;
        $this->criteria = $criteria;
    }

    public function execute()
    {
        $sellers = $this->sellerRepository->getList($this->criteria)->getItems();

        if (!$sellers) {
            return null;
        }

        $html = '<ul>';

        /** @var Seller $seller */
        foreach ($sellers as $seller) {
            $html .=  $seller->getName();
        }
        $html .='</ul>';

        /** @var RawResult $result */
        $result = $this->resultFactory->create(ResultFactory::TYPE_RAW);
        return $result->setContents($html);

    }
}
